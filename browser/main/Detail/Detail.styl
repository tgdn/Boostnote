.root
  absolute top bottom right

.empty
  height 320px
  display flex
  align-items center

.empty-message
  width 100%
  font-size 42px
  line-height 72px
  text-align center
  color $ui-inactive-text-color

body[data-theme="dark"]
  .root
    background-color $ui-dark-backgroundColor
  .empty-message
    color $ui-dark-inactive-text-color
